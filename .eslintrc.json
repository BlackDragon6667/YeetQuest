{
    "extends": ["eslint:recommended", "plugin:import/recommended"],
    "env": {
        "es2020": true
    },
    "globals": {
        "console": true,
        "process": true
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": [
            "warn",
            { "vars": "all", "args": "all", "argsIgnorePattern": "^_" }
        ],
        "import/no-commonjs": "error",
        "import/no-cycle": "error",
        "import/no-self-import": "error"
    }
}
